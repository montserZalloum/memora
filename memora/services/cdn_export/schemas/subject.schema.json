{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://memora.app/schemas/cdn/subject.schema.json",
  "title": "Subject Details",
  "description": "Complete subject with tracks and units",
  "type": "object",
  "required": ["id", "title", "version", "generated_at", "tracks", "access"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Subject document name"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "color_code": {
      "type": "string",
      "pattern": "^#[0-9A-Fa-f]{6}$"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "version": {
      "type": "integer",
      "description": "Unix timestamp"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "access": {
      "$ref": "#/definitions/accessControl"
    },
    "tracks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/track"
      }
    },
    "stats": {
      "type": "object",
      "properties": {
        "total_units": { "type": "integer" },
        "total_topics": { "type": "integer" },
        "total_lessons": { "type": "integer" }
      }
    }
  },
  "definitions": {
    "accessControl": {
      "type": "object",
      "required": ["is_published", "access_level"],
      "properties": {
        "is_published": { "type": "boolean" },
        "access_level": {
          "type": "string",
          "enum": ["public", "authenticated", "paid", "free_preview"]
        },
        "required_item": { "type": "string" },
        "is_sold_separately": { "type": "boolean" },
        "parent_item_required": { "type": "boolean" }
      }
    },
    "track": {
      "type": "object",
      "required": ["id", "title", "sort_order", "units", "access"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "sort_order": { "type": "integer" },
        "access": { "$ref": "#/definitions/accessControl" },
        "units": {
          "type": "array",
          "items": { "$ref": "#/definitions/unitSummary" }
        }
      }
    },
    "unitSummary": {
      "type": "object",
      "required": ["id", "title", "sort_order", "url", "access"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "badge_image": { "type": "string", "format": "uri" },
        "sort_order": { "type": "integer" },
        "url": {
          "type": "string",
          "description": "Relative path to unit JSON"
        },
        "access": { "$ref": "#/definitions/accessControl" },
        "topic_count": { "type": "integer" },
        "lesson_count": { "type": "integer" }
      }
    }
  }
}
