{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://memora.app/schemas/cdn/008/subject_hierarchy.schema.json",
  "title": "Subject Hierarchy",
  "description": "Subject navigation structure (tracks → units → topics) without lesson content",
  "type": "object",
  "required": ["id", "title", "is_linear", "version", "generated_at", "access", "tracks"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Subject document name"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "color_code": {
      "type": "string",
      "pattern": "^#[0-9A-Fa-f]{6}$"
    },
    "is_linear": {
      "type": "boolean",
      "description": "Whether subject enforces linear navigation"
    },
    "version": {
      "type": "integer",
      "description": "File version (Unix timestamp)"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "access": {
      "$ref": "#/definitions/accessControl"
    },
    "tracks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/track"
      }
    },
    "stats": {
      "type": "object",
      "properties": {
        "total_tracks": { "type": "integer" },
        "total_units": { "type": "integer" },
        "total_topics": { "type": "integer" },
        "total_lessons": { "type": "integer" }
      }
    }
  },
  "definitions": {
    "accessControl": {
      "type": "object",
      "required": ["is_published", "access_level"],
      "properties": {
        "is_published": { "type": "boolean" },
        "access_level": {
          "type": "string",
          "enum": ["authenticated", "paid", "free_preview"]
        },
        "required_item": { "type": "string" },
        "is_sold_separately": { "type": "boolean" },
        "parent_item_required": { "type": "boolean" }
      }
    },
    "track": {
      "type": "object",
      "required": ["id", "title", "is_linear", "access", "units"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "is_linear": { "type": "boolean" },
        "access": { "$ref": "#/definitions/accessControl" },
        "units": {
          "type": "array",
          "items": { "$ref": "#/definitions/unit" }
        }
      }
    },
    "unit": {
      "type": "object",
      "required": ["id", "title", "is_linear", "access", "topics"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "badge_image": { "type": "string", "format": "uri" },
        "is_linear": { "type": "boolean" },
        "access": { "$ref": "#/definitions/accessControl" },
        "topics": {
          "type": "array",
          "items": { "$ref": "#/definitions/topic" }
        }
      }
    },
    "topic": {
      "type": "object",
      "required": ["id", "title", "is_linear", "topic_url", "access", "lesson_count"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "is_linear": { "type": "boolean" },
        "topic_url": {
          "type": "string",
          "description": "Relative path to topic JSON file"
        },
        "access": { "$ref": "#/definitions/accessControl" },
        "lesson_count": {
          "type": "integer",
          "description": "Number of lessons in this topic"
        }
      }
    }
  }
}
